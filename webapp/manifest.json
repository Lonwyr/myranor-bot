{
  "_version": "1.21.0",
  "sap.app": {
    "id": "com.lonwyr.MyranorBot",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "dataSources": {
			"magic": {
				"uri": "model/magic.json",
				"type": "JSON"
			}
		}
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "rootView": {
      "viewName": "com.lonwyr.MyranorBot.view.App",
      "type": "XML",
      "async": true,
      "id": "idAppControl"
    },
    "dependencies": {
      "minUI5Version": "1.60.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.ui.layout": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "com.lonwyr.MyranorBot.i18n.i18n"
        }
      },
      "character": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "check": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "combat": {
        "type": "com.lonwyr.MyranorBot.model.CombatModel"
      },
      "magic": {
        "type": "sap.ui.model.json.JSONModel",
				"dataSource": "magic"
      },
      "spells": {
        "type": "com.lonwyr.MyranorBot.model.SpellsModel"
      },
      "newSpell": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "editSpell": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "settings": {
        "type": "sap.ui.model.json.JSONModel"
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "com.lonwyr.MyranorBot.view",
        "controlId": "idAppControl",
        "controlAggregation": "pages",
        "async": true
      },
      "routes": [
        {
          "name": "RouteMain",
          "pattern": "",
          "target": [
            "TargetMain"
          ]
        },
        {
          "name": "RouteLogin",
          "pattern": "login",
          "target": [
            "TargetLogin"
          ]
        }
      ],
      "targets": {
        "TargetMain": {
          "viewType": "XML",
          "viewLevel": 1,
          "viewId": "main",
          "viewName": "Main"
        },
        "TargetLogin": {
          "viewType": "XML",
          "viewLevel": 1,
          "viewId": "login",
          "viewName": "Login"
        }
      }
    }
  }
}
