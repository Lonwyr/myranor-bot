 <mvc:View controllerName="com.lonwyr.MyranorBot.controller.Login"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>logintitle}">
      <content>
        <Label text="{i18n>token}"/>
        <Input id="tokeninput" />
        <Button
          text="load"
          press="loadData" 
          class="sapUiMediumMarginBottom" />
        <MessageStrip
          id="loginFailed"
          text="{i18n>loginFailed}"
          visible="false"
          type="Error"
          showIcon="true"
          class="sapUiMediumMarginBottom" />
        <MessageStrip
          text="{i18n>httpWarning}"
          showIcon="true"
          class="sapUiMediumMarginBottom" />
      </content>
    </Page>
</mvc:View>