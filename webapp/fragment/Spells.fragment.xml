<core:FragmentDefinition
   xmlns="sap.m"
    xmlns:uxap="sap.uxap"
   xmlns:core="sap.ui.core" >
    <uxap:ObjectPageSection title="{i18n>spells}">
    <uxap:subSections>
        <uxap:ObjectPageSubSection>
            <uxap:blocks>
                <Table
                        inset="false"
                        items="{
                            path: 'character>/spells',
                            sorter: {
                                path: 'category',
                                descending: false,
                                group: true
                            },
                            groupHeaderFactory: '.getGroupHeader'
                        }">
                    <columns>
                            <Column
                                width="12em">
                                <Text text="{i18n>source}" />
                            </Column>
                            <Column
				                minScreenWidth="Tablet"
				                demandPopin="true"
                                width="3em">
                                <Text text="{i18n>value}" />
                            </Column>
                            <Column
				                minScreenWidth="Tablet"
				                demandPopin="true"
                                width="12em">
                                <Text text="{i18n>attributes}" />
                            </Column>
                            <Column
                                vAlign="Center"
                                hAlign="Center"
                                width="4em" />
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text
                                        text="{character>name}" />
                                    <Text
                                        text="{character>value}" />
                                    <Text text="{= ${character>attributes/0} + ' / '+  ${character>attributes/1} + ' / ' + ${character>attributes/2}}" />
                                    <Button text="{i18n>roll}" press="onRollSpell" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </uxap:blocks>
            </uxap:ObjectPageSubSection>
        </uxap:subSections>
    </uxap:ObjectPageSection>
</core:FragmentDefinition>