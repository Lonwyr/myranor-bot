<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{check>/name}"
		placement="Left"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">
        <InputListItem label="{i18n>modificator}" >
            <Input
                value="{check>/spontaneousModificator}"
                type="Number" />
        </InputListItem>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="{i18n>roll}"
					press=".onRollSpell" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
